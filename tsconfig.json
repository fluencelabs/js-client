{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "downlevelIteration": true,
    "sourceMap": true,
    "inlineSources": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "pretty": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "bundle",
    "src/__test__"
  ],
  "include": ["src/**/*"]
}
