{
    "compilerOptions": {
        "downlevelIteration": true,
        "sourceMap": true,
        "inlineSources": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
