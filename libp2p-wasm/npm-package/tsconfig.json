{
    "compilerOptions": {
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "./dist/",
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": false,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src"
    ],
}
