{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": ".",
        "downlevelIteration": true,
        "sourceMap": true,
        "inlineSources": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "declarationMap": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist", "bundle"],
    "include": ["src/**/*"]
}
