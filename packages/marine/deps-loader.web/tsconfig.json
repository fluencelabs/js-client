{
    "compilerOptions": {
        "lib": ["es2017", "dom"],
        "outDir": "./dist/",
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*"]
}
